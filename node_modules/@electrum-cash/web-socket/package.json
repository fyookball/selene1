    "typescript": "^5.1.3",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@electrum-cash/debug-logs": "^1.0.0",
    "@monsterbitar/isomorphic-ws": "^5.3.0",
    "@types/ws": "^8.5.5",
    "async-mutex": "^0.5.0",
    "eventemitter3": "^5.0.1",
    "lossless-json": "^4.0.1",
    "ws": "^8.13.0"
