    "@parcel/packager-ts": "^2.12.0",
    "@parcel/transformer-typescript-types": "^2.12.0",
    "@types/debug": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@vitest/coverage-v8": "^1.3.1",
    "cspell": "^8.6.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.42.0",
    "eslint-plugin-import": "^2.23.4",
    "events": "^3.3.0",
    "parcel": "^2.12.0",
    "typedoc": "^0.25.12",
